<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:constraint="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingBottom="@dimen/dimen_dp_8"
    android:paddingTop="@dimen/dimen_dp_8">

    <View
        android:id="@+id/playscore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1fBDBDBD"
        android:visibility="gone" />

    <View
        android:id="@+id/now_playing_indicator"
        android:layout_width="5.0dip"
        android:layout_height="fill_parent"
        android:layout_marginBottom="8.0dip"
        android:layout_marginTop="12.0dip"
        android:visibility="gone" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_line_left"
        style="@style/AndovaAPP.Widget.ConstraintLayout.Guideline.Vertical.Left.Normal" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dimen_dp_40"
        android:layout_height="@dimen/dimen_dp_40"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_album_default"
        constraint:layout_constraintBottom_toBottomOf="parent"
        constraint:layout_constraintLeft_toLeftOf="@id/guide_line_left"
        constraint:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/popup_menu"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@mipmap/abc_ic_menu_moreoverflow_mtrl_alpha"
        android:tint="@color/background_floating_material_dark"
        constraint:layout_constraintBottom_toBottomOf="parent"
        constraint:layout_constraintRight_toRightOf="parent"
        constraint:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_item_title"
        style="@style/AndovaAPP.Widget.TextView.ListItemTitleStyle.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_dp_16"
        android:layout_marginStart="@dimen/dimen_dp_16"
        constraint:layout_constraintLeft_toRightOf="@id/image"
        constraint:layout_constraintRight_toLeftOf="@id/popup_menu"
        constraint:layout_constraintTop_toTopOf="@id/image" />

    <TextView
        android:id="@+id/text_item_subtitle"
        style="@style/AndovaAPP.Widget.TextView.ListItemSubTitleStyle.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_dp_16"
        android:layout_marginStart="@dimen/dimen_dp_16"
        android:layout_marginTop="@dimen/dimen_dp_6"
        android:maxWidth="@dimen/dimen_dp_140"
        constraint:layout_constraintLeft_toRightOf="@id/image"
        constraint:layout_constraintTop_toBottomOf="@id/text_item_title" />

    <View
        android:id="@+id/divider_subtitle"
        android:layout_width="@dimen/dimen_dp_1"
        android:layout_height="@dimen/dimen_dp_8"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_dp_6"
        android:layout_marginStart="@dimen/dimen_dp_6"
        android:layout_marginTop="@dimen/dimen_dp_6"
        android:background="#1f000000"
        constraint:layout_constraintBottom_toBottomOf="@id/text_item_subtitle"
        constraint:layout_constraintLeft_toRightOf="@id/text_item_subtitle"
        constraint:layout_constraintTop_toBottomOf="@id/text_item_title" />

    <TextView
        android:id="@+id/text_item_subtitle_2"
        style="@style/AndovaAPP.Widget.TextView.ListItemSubTitleStyle.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_dp_6"
        android:layout_marginStart="@dimen/dimen_dp_6"
        android:layout_marginTop="@dimen/dimen_dp_6"
        android:maxWidth="@dimen/dimen_dp_140"
        constraint:layout_constraintLeft_toRightOf="@id/divider_subtitle"
        constraint:layout_constraintRight_toLeftOf="@id/popup_menu"
        constraint:layout_constraintTop_toBottomOf="@id/text_item_title" />
</android.support.constraint.ConstraintLayout>