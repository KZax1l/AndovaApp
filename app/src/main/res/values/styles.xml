<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AndovaAPP" />

    <style name="AndovaAPP.Widget" />

    <style name="AndovaAPP.Widget.Toolbar">
        <item name="android:background">@color/colorToolbar</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="AndovaAPP.Widget.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/colorSubTextWhite</item>
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
    </style>
</resources>
